datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ApiKey {
  createdAt    DateTime      @default(now())
  downloadUrls DownloadUrl[]
  id           String        @id @default(cuid())
  key          String?
  updatedAt    DateTime      @updatedAt
  user         User?         @relation(fields: [userId], references: [id])
  userId       String?
}

model Model {
  createdAt    DateTime      @default(now())
  description  String?
  downloadUrls DownloadUrl[]
  fileUrl      String?
  id           String        @id @default(cuid())
  name         String?
  updatedAt    DateTime      @updatedAt
  uploadedBy   String?
}

model DownloadUrl {
  apiKey     ApiKey?   @relation(fields: [apiKeyId], references: [id])
  apiKeyId   String?
  createdAt  DateTime  @default(now())
  expiryDate DateTime?
  id         String    @id @default(cuid())
  model      Model?    @relation(fields: [modelId], references: [id])
  modelId    String?
  updatedAt  DateTime  @updatedAt
  url        String?
}

model User {
  apiKeys   ApiKey[]
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
